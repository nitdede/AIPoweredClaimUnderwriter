FROM postgres:15

ENV DEBIAN_FRONTEND=noninteractive

# Install pgvector package from PostgreSQL Apt Repository (prebuilt for the distro/arch)
RUN apt-get update \
  && apt-get install -y --no-install-recommends \
    ca-certificates \
    wget \
    gnupg \
    lsb-release \
  && mkdir -p /etc/apt/keyrings \
  && wget -qO - https://www.postgresql.org/media/keys/ACCC4CF8.asc | gpg --dearmor -o /etc/apt/keyrings/pgdg.gpg \
  && echo "deb [signed-by=/etc/apt/keyrings/pgdg.gpg] http://apt.postgresql.org/pub/repos/apt $(lsb_release -cs)-pgdg main" > /etc/apt/sources.list.d/pgdg.list \
  && apt-get update \
  && apt-get install -y --no-install-recommends postgresql-15-pgvector \
  && rm -rf /var/lib/apt/lists/* /etc/apt/keyrings/pgdg.gpg

# Copy initialization SQL that creates the pgvector extension on first initialization
COPY initdb-scripts/01-create-vector-extension.sql /docker-entrypoint-initdb.d/01-create-vector-extension.sql

EXPOSE 5432
